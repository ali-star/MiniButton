<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MiniButton">
        <attr name="mb_Width" format="dimension"/>
        <attr name="mb_Height" format="dimension"/>
        <attr name="mb_SetText" format="string"/>
        <attr name="mb_TextColor" format="color"/>
        <attr name="mb_TextSize" format="dimension"/>
        <attr name="mb_RippleColor" format="color"/>
        <attr name="mb_BackgroundColor" format="color"/>
        <attr name="mb_ShadowColor" format="color"/>
        <attr name="mb_ShadowSize" format="dimension"/>
        <attr name="mb_ShadowDy" format="dimension"/>
        <attr name="mb_Icon" format="reference"/>
        <attr name="mb_IconColor" format="color"/>
        <attr name="mb_IconSize" format="dimension"/>
        <attr name="mb_CornerRadius" format="dimension"/>
        <attr name="mb_StrokeColor" format="color"/>
        <attr name="mb_StrokeWidth" format="dimension"/>
        <attr name="mb_Typeface" format="string"/>
        <attr name="mb_LabelTypeface" format="string"/>
        <attr name="mb_SetLabel" format="string"/>
        <attr name="mb_LabelSize" format="dimension"/>
        <attr name="mb_Open" format="boolean"/>
        <attr name="mb_AllowFastClick" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SVGImageView">
        <attr name="siv_src" format="reference" />
        <attr name="siv_srcColor" format="color" />
        <attr name="siv_srcShadowRadius" format="dimension" />
        <attr name="siv_srcGradientStartColor" format="color"/>
        <attr name="siv_srcGradientEndColor" format="color"/>
        <attr name="siv_srcGradientStart" format="enum">
            <enum name="Top" value="0"/>
            <enum name="Right" value="1"/>
            <enum name="Bottom" value="2"/>
            <enum name="Left" value="3"/>
            <enum name="TopLeft" value="4"/>
            <enum name="TopRight" value="5"/>
            <enum name="BottomLeft" value="6"/>
            <enum name="BottomRight" value="7"/>
        </attr>

        <attr name="siv_srcGradientEnd" format="enum">
            <enum name="Top" value="0"/>
            <enum name="Right" value="1"/>
            <enum name="Bottom" value="2"/>
            <enum name="Left" value="3"/>
            <enum name="TopLeft" value="4"/>
            <enum name="TopRight" value="5"/>
            <enum name="BottomLeft" value="6"/>
            <enum name="BottomRight" value="7"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="lv_backgroundStrokeWidth" format="dimension"/>
        <attr name="lv_progressStrokeWidth" format="dimension"/>
        <attr name="lv_progressColor" format="color"/>
        <attr name="lv_backgroundStrokeColor" format="color"/>
        <attr name="lv_mode" format="enum">
            <enum name="loading" value="0"/>
            <enum name="progress" value="1"/>
        </attr>
    </declare-styleable>
    
</resources>